<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/entry_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Entry Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Blog</h1>

    <h2>
      This is the page for sharing news
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("blog-word.jpg", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>